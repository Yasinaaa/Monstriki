<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <ImageView
        android:layout_width="@dimen/size_prize_imageview"
        android:layout_height="@dimen/size_prize_imageview"
        android:id="@+id/iv_prize"
        android:background="@drawable/brain"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_prize_title"
        android:textSize="@dimen/textsize_prize_title"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/color_purple"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_prize_date"
        android:textAlignment="center"
        android:layout_below="@+id/tv_prize_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_purple"/>

</RelativeLayout>