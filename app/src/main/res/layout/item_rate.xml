<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_small"
    tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="@dimen/width_monster_rate"
        android:layout_height="@dimen/height_monster_rate"
        android:id="@+id/iv_monster"
        android:background="@drawable/m1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_monster_name"
        android:layout_toRightOf="@+id/iv_monster"
        android:text="Молька"
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/color_purple"
        android:layout_marginLeft="@dimen/margin_small"
        fontPath="fonts/GOTHIC.TTF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_monster_donuts"
        android:layout_toRightOf="@+id/iv_monster"
        android:layout_below="@+id/tv_monster_name"
        android:text="17"
        android:layout_marginTop="@dimen/margin_top_rate"
        android:textSize="@dimen/textsize_xlarge"
        android:textStyle="bold"
        android:textColor="@color/color_purple"
        android:layout_marginLeft="@dimen/margin_small"
        fontPath="fonts/GOTHIC.TTF"/>

    <ImageView
        android:layout_width="@dimen/width_donut_rate"
        android:layout_height="@dimen/height_donut_rate"
        android:id="@+id/iv_monster_donuts"
        android:layout_below="@+id/tv_monster_name"
        android:background="@drawable/donut"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@+id/tv_monster_donuts"/>

</RelativeLayout>