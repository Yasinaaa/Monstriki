<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="Брозябр"
        android:textSize="@dimen/textsize_monster_name"
        android:textColor="@android:color/white"
        android:padding="@dimen/padding_small"
        android:layout_marginLeft="@dimen/margin_small" />

    <View
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:background="@color/color_toolbar"
        android:id="@+id/view2"
        android:layout_alignBottom="@+id/view_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </View>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_donut"
        android:background="@drawable/donut"
        android:layout_alignBottom="@+id/view_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_donut2"
        android:background="@drawable/donut"
        android:layout_toLeftOf="@+id/iv_donut"
        android:layout_alignBottom="@+id/view_toolbar"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv_monster_talk"
        android:layout_below="@+id/view_toolbar"
        cardview:cardCornerRadius="@dimen/cardview_corner_radius"
        cardview:cardElevation="@dimen/cardview_elevation"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_monster_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_want_to_eat"
            android:textAlignment="center"
            android:textColor="@color/color_purple"
            android:textSize="@dimen/textsize_question"
            android:padding="@dimen/padding_normal" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="@dimen/width_monster_without_eyes"
        android:layout_height="@dimen/height_monster_without_eyes"
        android:id="@+id/iv_monster"
        android:background="@drawable/monster_without_eyes"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_below="@+id/cv_monster_talk"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iv_bubbles"
        android:layout_marginLeft="@dimen/margin_small" />
</merge>